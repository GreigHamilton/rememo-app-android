<?xml version="1.0" encoding="utf-8"?>

<!-- XML required for set colour (background) dialog in Rememo -->
<!-- Created by Greig Hamilton -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <!-- radio group for choices -->

    <RadioGroup
        android:id="@+id/colourSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/colour_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_reminder_colour_red" />
        
        <RadioButton
            android:id="@+id/colour_pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_reminder_colour_pink" />

        <RadioButton
            android:id="@+id/colour_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/set_reminder_colour_orange" />

        <RadioButton
            android:id="@+id/colour_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_reminder_colour_yellow" />

        <RadioButton
            android:id="@+id/colour_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_reminder_colour_green" />

        <RadioButton
            android:id="@+id/colour_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_reminder_colour_blue" />
    </RadioGroup>

</LinearLayout>