<!--  Layout for reminder activity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reminder_colour"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/red1"
    android:gravity="center"
    android:onClick="clickReminderScreen"
    android:orientation="vertical"
    android:padding="10dp" >

    <!-- reminder text -->

    <TextView
        android:id="@+id/reminder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:onClick="clickReminderScreen"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- layout container for the reminder screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickReminderScreen" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickReminderScreen" >
        </LinearLayout>

        <!-- reminder text -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickReminderScreen"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickReminderScreen" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickReminderScreen"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <!-- button for changing the reminder -->
    <Button
        android:id="@+id/reminder_change"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="clickReminderChange"
        android:text="@string/reminder_button_change" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickReminderScreen" >

        <!-- button for done -->
        <Button
            android:id="@+id/reminder_done"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickReminderDone"
            android:text="@string/reminder_button_done" />

        <!-- button for later -->
        <Button
            android:id="@+id/reminder_later"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickReminderLater"
            android:text="@string/reminder_button_later" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/reminder_taphere"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Touch Here"
            android:textColor="@color/Black" />

    </LinearLayout>

</LinearLayout>