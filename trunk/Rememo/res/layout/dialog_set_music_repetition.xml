<?xml version="1.0" encoding="utf-8"?>
<!-- @author	Greig Hamilton -->
<!-- Layout for select music dialog box -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <!-- radio group for musicons and earcons -->
    <RadioGroup
        android:id="@+id/musicRepetitionLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/sound_rep_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Repetition" />
        
        <RadioButton
            android:id="@+id/sound_rep_thirtyseconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 Seconds" />
        
        <RadioButton
            android:id="@+id/sound_rep_oneminute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Minute" />
        
        <RadioButton
            android:id="@+id/sound_rep_fiveminutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Minutes" />
        
        <RadioButton
            android:id="@+id/sound_rep_tenminutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Minutes" />
    </RadioGroup>

</LinearLayout>